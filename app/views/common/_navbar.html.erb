<% if current_page?('/') %>
  <nav class="navbar navbar-default transparent" role="navigation" id="navbar">
<% else %>
  <nav class="navbar navbar-default black" role="navigation" id="myNavbar">
<% end %>

  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">新时代招聘网</a>
    </div>

    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><%= link_to('首页', root_path) %></li>
        <li><a href="#about">关于我们</a></li>
        <li><a href="#services">服务优势</a></li>
        <li><a href="#hotjobs">火热职位</a></li>
        <li><a href="#userstory">用户反馈</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right" >
        <% if !current_user %>
          <li><%= link_to(content_tag(:i, '注册', class: 'fa fa-user-o'),  new_user_registration_path)%></li>
          <li><%= link_to(content_tag(:i, '登陆', class: 'fa fa-sign-in'),  new_user_session_path)%></li>
        <% else %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              你好，<%= current_user.username %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.admin? %>
                <li><%= link_to("管理后台", admin_jobs_path)%></li>
                <li class="divider"></li>
              <% else %>
                <li><%= link_to("已投递简历的工作", applier_jobs_path(@job))%><li>
              <% end %>

                <li><%= link_to("退出", destroy_user_session_path, method: :delete)%></li>

            </ul>
          </li>
        <% end %>
      </ul>
      <%= form_tag search_jobs_path, :method => :get, class: "navbar-form  navbar-right" do %>
        <div class="input-group" id ="search-id">
          <input type="text" class="form-control" name="q" placeholder="搜索职位、行业、公司" value="<%= params[:q]%>">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
        </div>
      <% end %>




    </div>
  </div>
</nav>
